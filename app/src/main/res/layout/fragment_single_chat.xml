<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SingleChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chat_recycle_view"
        tools:listitem="@layout/message_item"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_input_message"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:hint="Сообщение"
        android:textColor="@color/black"
        android:padding="10dp"
        android:id="@+id/chat_input_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_btn_send"/>

    <ImageView
        android:id="@+id/chat_btn_send"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_input_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>